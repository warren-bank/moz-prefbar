<?xml-stylesheet href="chrome://communicator/skin/" type="text/css"?>

<page xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
      id="new-check">

  <script type="application/x-javascript" src="utility.js"/>
  <script type="application/x-javascript" src="hotkeyedit.js"/>
  <script type="application/x-javascript" src="newExtcheck.js"/>

  <dialogheader title="&button-type-extcheck;"/>

  <tabbox id="tabbox" flex="1">
    <tabs>
      <tab label="&button-preftype-common;"/>
      <tab label="&button-preftype-setfunction;"/>
      <tab label="&button-preftype-getfunction;"/>
      <tab label="&button-preftype-initfunction;"/>
    </tabs>
    <tabpanels id="panel" flex="1">
      <vbox class="tabpanel" id="commontab" flex="1">
        <groupbox>
          <caption label="&button-attr-data;"/>
          <grid>
            <columns>
              <column/>
              <column flex="1"/>
            </columns>
            <rows>
              <row align="center">
                <label value="&button-attr-id;"/>
                <textbox id="itemId"/>
              </row>
              <row align="center">
                <label value="&button-attr-label;"/>
                <textbox id="itemLabel"/>
              </row>
              <row align="center">
                <label value="&button-attr-hotkey;"/>
                <hkeditor id="HotkeyEditor" style="-moz-binding:url(chrome://prefbar/content/keyeditor.xml#keyeditor);"/>
              </row>
            </rows>
          </grid>
        </groupbox>
      </vbox>

      <vbox id="setfunctiontab" flex="1">
        <textbox id="itemSetfunction" multiline="true" wrap="off" style="height: 100%; font-family: -moz-fixed;" flex="1" class="uri-element"/>
      </vbox>

      <vbox id="getfunctiontab" flex="1">
        <textbox id="itemGetfunction" multiline="true" wrap="off" style="height: 100%; font-family: -moz-fixed;" flex="1" class="uri-element"/>
        <groupbox>
          <caption label="&button-update-caption;"/>
          <radiogroup id="itemUpdateGroup" orient="horizontal">
            <radio label="&button-update-window;" selected="true"/>
            <radio label="&button-update-tab;" value="tab"/>
            <radio label="&button-update-url;" value="url"/>
          </radiogroup>
        </groupbox>
      </vbox>

      <vbox id="initfunctiontab" flex="1">
        <textbox id="itemInitfunction" multiline="true" wrap="off" style="height: 100%; font-family: -moz-fixed;" flex="1" class="uri-element"/>
      </vbox>
    </tabpanels>
  </tabbox>

</page>
